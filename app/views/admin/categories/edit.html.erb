<% if user_signed_in? %>
<% if current_user.user_type.to_s == "admin" %>
<h1>Editing category</h1>

<%= form_for [:admin, @category], :url => admin_category_path, method: :patch do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', category_path %>
<% end %>
<% end %>
